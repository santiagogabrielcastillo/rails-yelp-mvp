<div class="p-3 my-4">
  <%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: CATEGORIES %>
  <%= f.button :submit, class: 'btn btn-primary my-3' %>
  <% end %>

  <%= link_to 'Go back', restaurants_path %>
</div>