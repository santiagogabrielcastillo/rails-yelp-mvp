<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= @restaurant.name %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= @restaurant.category %></h6>
    <i class="fa fa-address-card" aria-hidden="true"></i><p class="card-text"><%= @restaurant.address %></p>
    <i class="fa fa-phone" aria-hidden="true"></i><p class="card-text"><%= @restaurant.phone_number %></p>
    <%= link_to 'Go back',  restaurants_path, class: 'card-link'%>
    <a href="#" class="card-link">Another link</a>
  </div>
</div>