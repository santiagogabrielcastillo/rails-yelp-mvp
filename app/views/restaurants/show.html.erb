<h1 class="mt-4">Restaurant details</h1>
<div class="card py-3 my-5" style="width: 36rem;">
  <div class="card-body">
    <div class="d-flex justify-content-between">
      <h5 class="card-title"><%= @restaurant.name %></h5>
      <h6 class="card-subtitle mb-2 text-muted"><%= @restaurant.category %></h6>
    </div>
    <div class="py-3">
      <i class="fa fa-address-card" aria-hidden="true"></i><span class="card-text p-3"><%= @restaurant.address %></span>
    </div>
    <div class="py-3">
      <i class="fa fa-phone" aria-hidden="true"></i><span class="card-text p-3"><%= @restaurant.phone_number %></span>
    </div>
  </div>
</div>
<hr>
<div class="container">
<h1>Reviews</h1>
  <% @restaurant.reviews.each do |r| %>
  <div class="card">
    <div class="card-body">
      <h6 class="card-subtitle mb-2 text-muted">Rating: <%= r.rating %></h6>
      <p class="card-text"><%= r.content %></p>
    </div>
  </div>
  <% end %>
</div>
<hr>

<div class="p-3 my-4">
<h3>Create a new review</h3>
  <%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating, collection: (0..5) %>
  <%= f.input :content %>
  <%= f.button :submit, class: 'btn btn-primary my-3' %>
  <% end %>

  <%= link_to 'Go back', restaurant_path(@restaurant) %>
</div>